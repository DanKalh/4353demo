generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model UserCredentials {
  id       Int    @id @default(autoincrement())
  email    String @unique
  password String
  profile  UserProfile?
}

model UserProfile {
  userId       Int       @id @default(autoincrement())
  fullName     String    @db.VarChar(50)
  address1     String    @db.VarChar(100)
  address2     String?   @db.VarChar(100)
  city         String    @db.VarChar(100)
  state        String    @db.Char(2)
  zipCode      String    @db.VarChar(9)
  skills       String[]
  preferences  String?
  availability DateTime[]
  user         UserCredentials @relation(fields: [userId], references: [id])
  volunteerHistory VolunteerHistory[]
}

model Event {
  id              Int             @id @default(autoincrement())
  eventName       String
  eventDescription String
  requiredSkills  String[]
  location        String
  eventDate       DateTime
  urgency         String
  volunteerHistory VolunteerHistory[]
  eventDetails    EventDetails[]
}

model EventDetails {
  id               Int      @id @default(autoincrement())
  eventId          Int
  detail           String
  event            Event @relation(fields: [eventId], references: [id])
}

model Volunteer {
  id          Int              @id @default(autoincrement())
  fullName    String
  address1    String
  address2    String?
  city        String
  state       String
  zipCode     String
  skills      String[]
  preferences String?
  availability DateTime[]
  history     VolunteerHistory[]
}

model VolunteerHistory {
  id               Int      @id @default(autoincrement())
  volunteerId      Int
  userProfileId    Int?
  eventId          Int
  participationStatus String
  volunteer        Volunteer? @relation(fields: [volunteerId], references: [id])
  userProfile      UserProfile? @relation(fields: [userProfileId], references: [userId])
  event            Event     @relation(fields: [eventId], references: [id])
}

model Notifications {
  id          Int    @id @default(autoincrement())
  volunteerId Int
  message     String
}

model States {
  code String @id @db.Char(2)
  name String
}
